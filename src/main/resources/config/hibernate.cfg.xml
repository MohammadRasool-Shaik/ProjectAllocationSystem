<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/project_allocation</property>
		<property name="connection.username">rasool</property>
		<property name="connection.password">welcome</property>
		<property name="connection.pool_size">5</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">validate</property>

		<property name="hibernate.query.factory_class">org.hibernate.hql.ast.ASTQueryTranslatorFactory</property>

		<!-- Enable Hibernate's automatic session context management -->
		<!-- <property name="current_session_context_class">thread</property> -->

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<mapping
			class="com.happiestminds.projectallocationsystem.entity.ModuleEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.OperationEntity" />
		<mapping class="com.happiestminds.projectallocationsystem.entity.UserEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.UserGroupEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.SkillSetEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.CustomerEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.ProjectEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.AllocationRequestsEntity" />
		<mapping
			class="com.happiestminds.projectallocationsystem.entity.AllocationHistoryEntity" />
	</session-factory>
</hibernate-configuration>